{
    // Terminal
    "terminal.integrated.cwd": "${workspaceFolder}",

    // Editor Behavior
    "editor.suggestSelection": "first",
    "editor.cursorBlinking": "solid",
    "editor.matchBrackets": "always",
    "editor.scrollBeyondLastLine": false,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 78,
    "editor.rulers": [78],
    "editor.showFoldingControls": "always",
    "workbench.colorTheme": "Default Dark+",
    "window.title": "${activeEditorShort}${separator}${rootName}${separator}${appName}",

    // Display
    "editor.lineNumbers": "on",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",

    // File Management
    "files.autoSave": "afterDelay",

    // Encoding
    "files.encoding": "utf8",

    // Indentation
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.autoIndent": "full",
    "editor.formatOnType": true,
    "editor.cursorWrap": true,
    "editor.wordWrap": "wordWrapColumn",

    // Search
    "search.useIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,
    "search.smartCase": true,
    "editor.cursorSurroundingLines": 999999,

    // AI conversion rules for Vim 'set' commands:
    // 1. Comment all 'set' lines in the vscode settings.json format if not already done.
    // 2. Convert only the first 'set' command per request to prevent confusion.
    // 3. Avoid duplicating existing settings.
    // 4. Place each setting in the appropriate section of the settings file.
    // 5. Group settings logically, creating new groups if necessary.
    // 6. Remove the 'set' line after conversion, unless otherwise specified.
    // 7. If no equivalent VSCode setting exists, comment the 'set' line with notes on alternatives or workarounds.
    // 8. Retain these instructions for future reference.

set   formatoptions=tcroq1
" set   wrapmargin=2
set   backspace=indent,eol,start
set   textwidth=78
set   autoindent
set   smartindent
set nocopyindent
set   shiftwidth=2
set   t_te=
set   t_ti=

}
