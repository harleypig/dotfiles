{
    // Terminal
    "terminal.integrated.cwd": "${workspaceFolder}",

    // Editor Behavior
    "editor.suggestSelection": "first",
    "editor.cursorBlinking": "solid",
    "editor.matchBrackets": "always",
    "editor.scrollBeyondLastLine": false,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 78,
    "editor.rulers": [78],
    "editor.showFoldingControls": "always",
    "workbench.colorTheme": "Default Dark+",
    "window.title": "${activeEditorShort}${separator}${rootName}${separator}${appName}",

    // Display
    "editor.lineNumbers": "on",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",

    // File Management
    "files.autoSave": "afterDelay",

    // Encoding
    "files.encoding": "utf8",

    // Indentation
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.autoIndent": "full",
    "editor.formatOnType": true,
    "editor.cursorWrap": true,
    "editor.wordWrap": "wordWrapColumn",

    // Search
    "search.useIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,
    "search.smartCase": true,
    "editor.cursorSurroundingLines": 999999,

    // AI conversion rules for Vim 'set' commands:
    // 1. Avoid duplicating existing settings.
    // 2. Place each setting in the appropriate section of the settings file.
    // 3. Group settings logically, creating new groups if necessary.
    // 4. Remove the 'set' line after conversion, unless otherwise specified.
    // 5. If no equivalent VSCode setting exists, comment the 'set' line with
    //    notes on alternatives or workarounds.
