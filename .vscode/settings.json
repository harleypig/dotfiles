{
    // Note: Some vim `formatoptions` flags are not directly supported in
    // VSCode.
    // 't', 'c', 'r', 'o' are partially supported with formatOnType and
    //  wordWrap settings.
    // 'q', '1' are not directly supported.

    // Terminal
    "terminal.integrated.cwd": "${workspaceFolder}",

    // Editor Behavior
    "editor.cursorBlinking": "solid",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.matchBrackets": "always",
    "editor.rulers": [78],
    "editor.scrollBeyondLastLine": true,
    "editor.showFoldingControls": "always",
    "editor.suggestSelection": "first",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 0,

    // Display
    "editor.lineNumbers": "on",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.cursorSurroundingLines": 999999,

    // File Management
    "files.autoSave": "afterDelay",

    // Encoding
    "files.encoding": "utf8",

    // Indentation
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.autoIndent": "full",

    // Search
    "search.useIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true

    // AI conversion rules for Vim 'set' commands:
    // # Use only the vim settings commented in this file.
    // 1. Avoid adding duplicate settings.
    // 2. Place each setting in the appropriate section of the settings file.
    // 3. Group settings logically, creating new groups if necessary.
    // 4. Remove the 'set' line after conversion, unless otherwise specified.
    // 5. If no equivalent VSCode setting exists, use a JSON comment to note
    //    alternatives or workarounds for the 'set' line.
    // 6. Retain these instructions for future reference.

}
