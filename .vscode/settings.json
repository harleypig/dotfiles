{
    // Terminal
    "terminal.integrated.cwd": "${workspaceFolder}",

    // Editor Behavior
    "editor.suggestSelection": "first",
    "editor.cursorBlinking": "solid",
    "editor.matchBrackets": "always",
    "editor.scrollBeyondLastLine": false,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 78,
    "editor.rulers": [78],
    "editor.showFoldingControls": "always",
    "workbench.colorTheme": "Default Dark+",
    "window.title": "${activeEditorShort}${separator}${rootName}${separator}${appName}",

    // Display
    "editor.lineNumbers": "on",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",

    // File Management
    "files.autoSave": "afterDelay",

    // Encoding
    "files.encoding": "utf8",

    // Indentation
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.autoIndent": "full",

    // Search
    "search.useIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,
    "search.smartCase": true,
    "editor.cursorSurroundingLines": 999999,

    // AI conversion rules for Vim 'set' commands:
    // 1. Make each 'set' line a comment if it isn't already.
    // 2. Convert only the first 'set' command per request to avoid confusion.
    // 3. Ensure no duplication of existing settings.
    // 4. Insert each setting into the correct section of the settings file.
    // 5. Organize settings into logical groups, creating new groups if needed.
    // 6. Delete the 'set' line after conversion, unless otherwise instructed.
    // 7. If a matching VSCode setting is unavailable, comment the 'set' line with notes on alternatives or workarounds.
    // 8. Keep these instructions for future reference.

set   formatoptions=tcroq1
set   wrapmargin=2
set   backspace=indent,eol,start
set   textwidth=78
set   autoindent
set   smartindent
set nocopyindent
set   shiftwidth=2
set   t_te=
set   t_ti=

}
