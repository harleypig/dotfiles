
#use DB::Color; # https://github.com/Ovid/DB--Color

$DB::deep = 1000; # increase recursion limit

sub afterinit {

  push @$DB::pretype, 'v'
    unless grep { /^v$/ } @$DB::pretype;

#  push @$DB::pretype, 'l'
#    unless grep { /^l$/ } @$DB::pretype;

  push @DB::typeahead,
    'use Data::Dump "dump"',
    'o windowSize=35',
  ;
}
