# http://www.jukie.net/bart/blog/pimping-out-git-log
# https://news.ycombinator.com/item?id=14045787

[user]
  name = Alan Young
  email = harleypig@harleypig.com

[core]
  editor = vim
  excludesfile = ~/.gitignore_global
  autocrlf = input
  safecrlf = true
  pager = less -FIJRWX

[branch]
  autosetupmerge = true

[merge]
  tool = vimdiff
  guitool = kdiff3
  conflictstyle = diff3

[alias]
  # Show the defined aliases
  aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'

  # Shorten common commands
  a     = add
  aa    = add --all
  ai    = add --interactive
  au    = add -u

  b     = branch
  ba    = branch -a
  ball  = branch -ar

  c     = commit
  cb    = commit --branch
  ci    = commit --interactive
  co    = checkout

  d     = diff
  dc    = diff --cached
  ds    = diff --stat -r
  dt    = difftool

  find  = !git ls-tree -r --name-only HEAD | grep --color $1
  prune = fetch --prune
  p    = pull

  s    = status
  ss   = status -s
  st   = status -sb

  # Log related aliases
  graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
  hist = log --pretty=format:\"%C(yellow)%h%C(reset) %C(green)%ad%C(reset) %C(red)|%C(reset) %s %C(bold blue)[%an]%C(reset)%C(yellow)%d%C(reset)\" --graph --date=short
  lc   = log ORIG_HEAD.. --stat --no-merges
  lg   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lg2  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen%cn%Creset %Cblue(%cr)%Creset' --abbrev-commit --date=relative
  lp   = log --pretty=format:'%h : (%aN) %s' --topo-order --graph
  new  = !sh -c 'git log $1@{1}..$1@{0} "$@"'

  # Ick. No.
  #lg3 = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[diff]
  tool = vimdiff
  guitool = kdiff3

[difftool]
  prompt = false

[apply]
  whitespace = fix

[color]
  diff   = auto
  status = auto
  branch = auto

[color "branch"]
  current = green reverse
  local   = cyan
  remote  = blue

[color "status"]
  added     = green
  changed   = red
  untracked = yellow

[push]
  default = simple
  followTags = true

[pull]
  default = current

[branch "master"]
  #remote = origin
  #merge = refs/heads/master
  rebase = true

[github]
  user = harleypig

[status]
  showUntrackedFiles = all

[status-tackle]
  #plugins = UntrackedFiles WorkingTreeChanges IndexChanges UnpushedBranches CompletedFeatureBranches UnmergedFeatureBranches
  plugins = UntrackedFiles WorkingTreeChanges IndexChanges UnpushedBranches

[fetch]
  prune = true

[transfer]
  fsckobjects = true

[stash]
  showPatch = true

[rebase]
  autostash = true
  autoSquash = true
