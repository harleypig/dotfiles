
function __grooveshark_status() {

  if [[ -f ~/Documents/Grooveshark/currentSong.txt ]]; then

    # TODO: See if there is a way to do this strictly in bash, to reduce time footprint

    SONG=$(grep playing ~/Documents/Grooveshark/currentSong.txt | cut -d '	' -f 1,2,3 | tr '\t' ':')
    SONG="${SONG//:/ : }"

    if [[ -n ${SONG} ]]; then echo "$SONG"; fi

  fi

}
