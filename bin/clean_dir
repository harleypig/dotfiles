#!/bin/bash

#DEBUG=echo

VIDEOS='/home/harleypig/videos/NeedsSorting'

REMOVE=()
REMOVE+=('*.gif')
REMOVE+=('*hevc*')
REMOVE+=('*.htm')
REMOVE+=('*.html')
REMOVE+=('*.idx')
REMOVE+=('*.jpeg')
REMOVE+=('*.jpg')
REMOVE+=('*.lnk')
REMOVE+=('*.nfo')
REMOVE+=('*.png')
REMOVE+=('rarbg.com*')
REMOVE+=('*sample*')
REMOVE+=('*.sqlite')
REMOVE+=('*.srt')
REMOVE+=('*.sub')
REMOVE+=('*.txt')
REMOVE+=('*.url')
REMOVE+=('*.website')
REMOVE+=('*.xml')

function join_array {

  local d=$1
  shift;
  echo -n "$1"
  shift
  printf "%s" "${@/#/$d}"

}

if cd $VIDEOS 2> /dev/null; then

  clear
  echo "Changed to ${PWD} ..."

  iname="( -iname $(join_array ' -o -iname ' "${REMOVE[@]}") )"

  echo "Deleting unwanted files ..."
  find $VIDEOS -type f $iname -delete

  echo "Moving wanted files ..."
  find $VIDEOS -mindepth 2 -type f -exec mv '{}' . \;

  echo "Removing empty directories ..."
  find $VIDEOS -type d -empty -delete

  ls -Al --color=auto

else

  echo $VIDEOS does not exist

fi
