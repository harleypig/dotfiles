#!/usr/bin/perl

use strictures 2;

use JSON;

sub cputemps {
  my $json=qx(sensors -ufj coretemp-isa-*);
  my $data=from_json($json);

  my ( $key ) = keys %$data;
  $data = $data->{$key};

#$VAR1 = {
#          'Core 2' => {
#                        'temp4_max' => '177.8',
#                        'temp4_input' => '107.6',
#                        'temp4_crit' => '203',
#                        'temp4_crit_alarm' => '32'
#                      },
#          'Core 0' => {
#                        'temp2_crit' => '203',
#                        'temp2_max' => '177.8',
#                        'temp2_input' => '111.2',
#                        'temp2_crit_alarm' => '32'
#                      },
#          'Core 3' => {
#                        'temp5_crit' => '203',
#                        'temp5_input' => '114.8',
#                        'temp5_max' => '177.8',
#                        'temp5_crit_alarm' => '32'
#                      },
#          'Package id 0' => {
#                              'temp1_crit' => '203',
#                              'temp1_input' => '114.8',
#                              'temp1_max' => '177.8',
#                              'temp1_crit_alarm' => '32'
#                            },
#          'Core 1' => {
#                        'temp3_crit_alarm' => '32',
#                        'temp3_crit' => '203',
#                        'temp3_max' => '177.8',
#                        'temp3_input' => '113'
#                      },
#          'Adapter' => 'ISA adapter'
#        };

  my @temps;

  for my $key ( keys %$data ) {
    $key !~ 'Core (\d)' && next;
    my $num=$1;
    my $val=$num+2;
    my $subkey="temp${val}_input";
    $temps[$num] = sprintf "CPU$num: %.2f", $data->{$key}{$subkey};
  }

  my $out = join ' | ', map { "$_" } @temps;
  return $out;
}

sub gputemps {
  my $raw=qx(nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader);
  my $ftemp=sprintf '%.2f', ($raw*1.8)+32;
  return "| GPU: $ftemp";
}

my $out=cputemps() . ' ' . gputemps();

print "$out";
