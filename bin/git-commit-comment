#!/bin/bash

# Usage: git-commit-comment "commit message"

commit_message="$1"

# Regex to find a hash followed by a string of numbers (e.g., #123456)
regex="#[0-9]+"

# Check if the commit message matches the pattern
if [[ $commit_message =~ $regex ]]; then
    work_item_id="${BASH_REMATCH[0]}"
    # Check if the work item exists in the TPE project
    # Simulating a check - replace this with actual API call or database query
    # Assuming 'tpe_check_work_item' is a command or function that returns 0 if exists
    if tpe_check_work_item "$work_item_id"; then
        git commit -m "$commit_message"
        # Add the commit message to the work item
        # Assuming 'tpe_add_comment_to_work_item' is a command or function
        tpe_add_comment_to_work_item "$work_item_id" "$commit_message"
    else
        echo "Error: Invalid work item ID $work_item_id"
        exit 1
    fi
else
    # No pattern matched, proceed with normal commit
    git commit -m "$commit_message"
fi
