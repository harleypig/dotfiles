#!/bin/bash

set_title "$(basename "$0")"

function notify() { notify-send --urgency=normal "sudo call, password may be required"; }

UPDATE='notify && sudo apt update'
UPGRADE='notify && sudo apt dist-upgrade'
AUTOREMOVE='notify && sudo apt autoremove --purge'
PURGE='notify && sudo apt purge'
PURGE_RC=$(dpkg -l | awk '/^rc/ {print $2}')

$UPDATE && $UPGRADE && $AUTOREMOVE && $PURGE "$PURGE_RC"

set_title 'done_updating'
