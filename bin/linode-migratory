#!/bin/bash

echo "NOT READY!"
exit 1

declare -A linodes volumes

##############################################################################
# Functions
#-----------------------------------------------------------------------------
get_linodes() {
  readarray -t raw < <(lin linodes list --format id,label --text --no-headers)

  for line in "${raw[@]}"; do
    read -r id label <<< "$line"
    linodes["$label"]="$id"
  done
}

#-----------------------------------------------------------------------------
get_volumes() {
  readarray -t raw < <(lin volumes list --format id,label --text --no-headers)

  for line in "${raw[@]}"; do
    read -r id label <<< "$line"
    volumes["$label"]="$id"
  done
}

##############################################################################

# Make the filesystem
# Only once!
mkfs.ext4 "/dev/disk/by-id/scsi-0Linode_Volume_migratory"

mkdir /mnt/migratory
mount "/dev/disk/by-id/scsi-0Linode_Volume_migratory" "/mnt/migratory"

