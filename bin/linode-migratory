#!/bin/bash

echo "NOT READY!"
exit 1

declare -A linodes

populate_linodes() {
    IFS=',' readarray -t linode_data < <(lin linodes list --format id,label --text --no-headers)
    for line in "${linode_data[@]}"; do
        IFS=',' read -r id label <<< "$line"
        linodes["$label"]="$id"
    done
}

# Make the filesystem
# Only once!
mkfs.ext4 "/dev/disk/by-id/scsi-0Linode_Volume_migratory"

mkdir /mnt/migratory
mount "/dev/disk/by-id/scsi-0Linode_Volume_migratory" "/mnt/migratory"

