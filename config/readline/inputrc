# http://www.reddit.com/r/commandline/comments/kbeoe/you_can_make_readline_and_bash_much_more_user/
# https://wiki.archlinux.org/index.php/Readline

$include /etc/inputrc

# Interface and display options
set colored-completion-prefix on
set colored-stats on
set completion-prefix-display-length 2
set editing-mode vi
set visible-stats on

# Adds [INS] or [CMD] to prompt
set show-mode-in-prompt on
set vi-ins-mode-string "\001\033[33m\002[INS] \001\033[0m\002"
set vi-cmd-mode-string "\001\033[31m\002[CMD] \001\033[0m\002"

# Completion behavior
set completion-ignore-case on
set completion-map-case on
set mark-directories on
set mark-symlinked-directories on
set show-all-if-ambiguous on
set show-all-if-unmodified on

# History behavior
set history-preserve-point on
set input-meta on
set output-meta on
set expand-tilde on

# Key bindings
"\e[A":history-search-backward
"\e[B":history-search-forward
"\e\C-l":"\C-e | less\C-m"
" \e ": history-expand-line
