{
  "$schema": "http://opencode.ai/config.json",
  "theme": "system",
  "permissions": {
    "edit": "ask",
    "bash": "ask",
    "webfetch": "ask"
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  }
}
