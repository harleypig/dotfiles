altscreen on
autodetach on
defscrollback 30000
defutf8 on
msgwait 2
startup_message off
vbell_msg "Bell in %t"
zombie xr onerror

# http://stackoverflow.com/questions/1630013/vim-colorschemes-in-screen-putty

# name screen title after currently running command
# need to add \[\033k\033\\\] to prompt
shelltitle "$ |bash"

# 256 colors
#attrcolor b ".I"
#defbce "on"
#termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
term screen-256color

# Allow scrollback
termcapinfo xterm ti@:te@

caption always
hardstatus alwayslastline "%{=b}%{G} Screen(s): %{b}%w"

# make Shift-1 select screen 11, etc.
bind  ) select 10
bind  ! select 11
bind  @ select 12
bind \# select 13
bind \$ select 14
bind  % select 15
bind \^ select 16
bind  & select 17
bind  * select 18
bind  ( select 19
bind  q select 20
bind  w select 21
bind  e select 22
bind  r select 23
bind  t select 24
bind  y select 25
bind  u select 26
bind  i select 27
bind  o select 28
bind  p select 29
bind  Q select 30
bind  W select 31
bind  E select 32
bind  R select 33
bind  T select 34
bind  Y select 35
bind  U select 36
bind  I select 37
bind  O select 38
bind  P select 39

chdir

#screen -l -t 'irssi'     0 /bin/bash -c "irssi"
#screen -l -t 'rtorrent'  0 /bin/bash -c "rtorrent"
screen -l -t 'bash'
