#[color "interactive"]
# prompt, header, help or error

[merge]
	tool = fugitive
  guitool = kdiff3
  conflictstyle = diff3

[mergetool]
  prompt = false

[mergetool "fugitive"]
	cmd = vim -f -c \"Gvdiff\" \"$MERGED\"

[notes]
  displayRef = '*'

[pull]
  default = current

[push]
  default = current
  followTags = true

[stash]
  showpatch = true

[status]
  showuntrackedfiles = all

[color "status"]
  added     = green
  changed   = red
  untracked = yellow
  unmerged  = red dim

[rebase]
  autostash = true
  autosquash = true

[http]
