report.dump.description=         Custom: Shows all information
report.dump.columns=             id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status,priority,entry,wait,scheduled,until,due,end,uuid,parent,imask,mask
report.dump.labels=              ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT,+P,+BORN,+WAIT,+HOLD,+REAP,+DEAD,+DIED,+UUID,+PUID,+I,+M
report.dump.filter=              #>>>
report.dump.sort=                entry+

report.fail.description=         Custom: Finds non-conforming tasks
report.fail.columns=             id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status,priority,entry,wait,scheduled,until,due,end,imask,mask
report.fail.labels=              ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT,+P,+BORN,+WAIT,+HOLD,+REAP,+DEAD,+DIED,+I,+M
report.fail.filter=              ((kind.any: tags.any: ) or (kind.none: tags.none: ) or (project:.someday kind.not:notes ) or (area.none: ) or (priority.any: or wait.any: or scheduled.any: or until.any: ))
report.fail.sort=                entry+

report.data.description=         Custom: Reference and non-task data
report.data.columns=             id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status,priority,entry,due,end,imask,mask
report.data.labels=              ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT,+P,+BORN,+DEAD,+DIED,+I,+M
report.data.filter=              project:_data
report.data.sort=                project+,kind-,area+,description+,entry+

report.meta.description=         Custom: Metadata and recurring tasks
report.meta.columns=             id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status,priority,entry,due,end,imask,mask
report.meta.labels=              ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT,+P,+BORN,+DEAD,+DIED,+I,+M
report.meta.filter=              ((project.not:_data (kind.any: or recur.any: or tags:.research or tags:.waiting)) or +ACTIVE)
report.meta.sort=                project+,kind-,area+,description+,entry+

report.read.description=         Custom: Default list view, sorted for review
report.read.columns=             id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status,priority,entry,due,end,imask,mask
report.read.labels=              ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT,+P,+BORN,+DEAD,+DIED,+I,+M
report.read.filter=              #>>>
report.read.sort=                project+,kind-,depends+,description+,entry+

report.view.description=         Custom: Default list view
report.view.columns=             id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status
report.view.labels=              ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT
report.view.filter=              ((project.not:_data (kind.none: status:pending project.not:.someday tags.not:.waiting (recur.none: or +TODAY or +OVERDUE) (+DUE or -BLOCKED))) or +ACTIVE)
report.view.sort=                start-,urgency-,due+,priority-,project+,depends+,entry+

report.export-agenda.description=Export: Actions
report.export-agenda.columns=    #>>>
report.export-agenda.labels=     #>>>
report.export-agenda.filter=     (status:pending tags:agenda (due.none: or +DUE or +OVERDUE))
report.export-agenda.sort=       #>>>

report.export-remind.description=Export: Reminders
report.export-remind.columns=    #>>>
report.export-remind.labels=     #>>>
report.export-remind.filter=     (status:pending due.any: )
report.export-remind.sort=       #>>>

