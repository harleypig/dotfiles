function _dir_red_or_green() { if [ -w "${PWD}" ]; then echo -ne ${text_green}; else echo -ne ${text_red}; fi; }
cwd="\$(_dir_red_or_green)\${PWD}${text_reset}"

DROPBOX=$(which dropbox 2> /dev/null)

if [[ -x ${DROPBOX} ]]
then

  dropbox="Dropbox: \$($(which dropbox) status | perl -07 -pe 's/\n+$//;s/\n+/ : /g')"

fi

GIT=$(which git 2> /dev/null)

if [[ -x ${GIT} ]]
then

  gitbranch="\$(git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ ( \1 )/')"

fi

function _current_song() {

  if [[ -f ~/Documents/Grooveshark/currentSong.txt ]]
  then

    SONG=$(grep playing ~/Documents/Grooveshark/currentSong.txt | cut -d '	' -f 1,2,3)

    if [[ -n ${SONG} ]]
    then

      echo -ne "${SONG}\\n "

    fi
  fi
}

[[ ! -z ${MYVIMRC} ]] && vim="${text_red}${blink}(VIm)${text_reset} "

datetime="\D{%a %b %d %Y %T %n DoW: %w DoY: %j Wk: %V Epoch: %s}"

# Info line
info[0]="Uptime: \$(perl -ne 's/\s.*\$//;printf\"%.2f\",\$_/(60*60*24)' /proc/uptime) days" # uptime
info[1]="LoadAvg: \$(cat /proc/loadavg | cut -d ' ' -f 1-3)"                                # loadavg
info[2]="\$(df -hP . | grep -v 'Avail' | tr -s ' ' | cut -d ' ' -f 4) available"            # freespace

[[ -n ${dropbox} ]] && info[3]=${dropbox}

SAVE_IFS="$IFS"
IFS="|"
INFOLINE="${info[*]}"
IFS="$SAVE_IFS"
INFOLINE="${INFOLINE//|/ | }"

PROMPT[0]="${vim}${text_cyan}${datetime}"
PROMPT[1]="${INFOLINE}"
PROMPT[2]="\$(_current_song)"
#PS1="${PS1}\n ${exitstatus}${erase_eol}"

HOSTSPECIFIC="$(dirname $(readlink ~/.bash_prompt))/hostspecific/$(hostname)"
SOURCE="$(ls ${HOSTSPECIFC}/*prompt* 2> /dev/null)"
for s in ${SOURCE}; do source $s; done

# Build the prompt
PS1="${erase_line}\$(history -a)"

for p in "${PROMPT[@]}"
do

  PS1="${PS1}\n${erase_line} ${text_cyan}${p}${text_reset}"

done

PS1="${PS1}\n${erase_line} ${text_cyan}\u@${text_yellow}\H${text_cyan}: ${cwd}${text_reset}${gitbranch}"
PS1="${PS1}\n${erase_line}${exitstatus} $ "

